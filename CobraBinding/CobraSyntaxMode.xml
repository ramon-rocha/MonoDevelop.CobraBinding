        <Word>nil</Word>
    </Keywords>
        
    <Keywords color="keyword.access">
        <Word>base</Word>
        <Word>this</Word>
        <Word>result</Word>
        <Word>old</Word>
        <Word>value</Word>
    </Keywords>
    
    <Keywords color="keyword.operator">
		<Word>inherits</Word>
        <Word>implements</Word>
		<Word>is</Word>
        <Word>to</Word>
        <Word>and</Word>
        <Word>or</Word>
