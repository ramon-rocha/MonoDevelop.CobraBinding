		<Word>sig</Word>
		<Word>as</Word>
		<Word>cue</Word>
		<Word>var</Word>
		<Word>const</Word>
		<Word>has</Word>
		<Word>event</Word>
	</Keywords>

	<Keywords color="Keyword(Property)">
		<Word>get</Word>
		<Word>set</Word>
		<Word>pro</Word>
	</Keywords>

	<Keywords color="Keyword(Modifiers)">
